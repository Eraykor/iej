<p id="notice"><%= notice %></p>

<h1>Listing Participants</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Birth date</th>
      <th>Place of birth</th>
      <th>Id number</th>
      <th>Adress</th>
      <th>Zip code</th>
      <th>City</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Affiliation process</th>
      <th>Entry process</th>
      <th>Expected process</th>
      <th>Entry solution</th>
      <th>Output solution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= image_tag participant.picture.url(:medium) %></td>
        <td><%= participant.last_name %></td>
        <td><%= participant.first_name %></td>
        <td><%= participant.birth_date %></td>
        <td><%= participant.place_of_birth %></td>
        <td><%= participant.id_number %></td>
        <td><%= participant.adress %></td>
        <td><%= participant.zip_code %></td>
        <td><%= participant.city %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.mobile %></td>
        <td><%= participant.email %></td>
        <td><%= participant.affiliation_process %></td>
        <td><%= participant.entry_process %></td>
        <td><%= participant.expected_process %></td>
        <td><%= participant.entry_solution %></td>
        <td><%= participant.output_solution %></td>
        <td><a href='<%= participant.document %>'/> participant.document_file_name</td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= flash[:note] %>

<div>
  <h4>Import that data!</h4>
    <%= form_tag import_participants_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import CSV" %>
    <% end %>
</div>

