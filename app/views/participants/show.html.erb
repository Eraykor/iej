<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <!-- <h3 class="panel-title">Identité</h3> -->
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Photo de profil</h3>
                </div>
                <div class="panel-body">
                  <div class="img-thumbnail">
                    <%= image_tag @participant.picture.url(:medium), :class => '' %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Identité</h3>
                </div>
                <div class="panel-body">
                  <ul class="list-group list-unstyled">
                    <li class="list-group-item">
                      <div class="form-group">

                        <%= @participant.last_name %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">

                        <%= @participant.first_name %>

                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <p>
                          <%= @participant.birth_date %>
                        </p>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <p>
                          <%= @participant.place_of_birth %>
                        </p>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <p>
                          <%= @participant.id_number %>
                        </p>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Coordonnées</h3>
                </div>
                <div class="panel-body">
                  <ul class="list-unstyled">
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.adress %>
                      </div>
                    </li>
                    <li class="list-unstyled">
                      <div class="form-inline text-align:center">
                        <div class="form-group">
                          <%= @participant.zip_code %>
                        </div>
                        <div class="form-group">
                          <%= @participant.city %>
                        </div>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.phone %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.mobile %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.email %>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="row-fluid">
            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Situation</h3>
                </div>
                <div class="panel-body">
                  <ul class="list-group list-unstyled">
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.affiliation_process %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.entry_process %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.expected_process %>
                      </li>
                      <li class="list-group-item">
                        <div class="form-group">
                          <%= @participant.entry_solution %>
                        </div>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.output_solution %>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Documents</h3>
                </div>
                <div class="panel-body">
                  <ul class="list-group list-unstyled">
                    <li class="list-group-item">
                      <div class="form-group">
                        <%= @participant.document %>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="pull-right"><%= link_to 'Edit', edit_participant_path(@participant), :class => 'span3 offset2 btn btn-primary submit_class_name_here block-right' %></div>
      <div class="pull-right"><%= link_to 'Back', participants_path, :class => 'span3 offset2 btn btn-primary submit_class_name_here block-right' %></div>
    </div>
  </div>
</div>
