<%= form_for @participant, html: { multipart: true } do |f| %>
<% if @participant.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

  <% @participant.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
</div>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <!-- <h3 class="panel-title">Identité</h3> -->
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-4">
              photo
            </div>
            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Identité</h3>
                </div>
                <div class="panel-body">
                  <ul class="list-group list-unstyled">
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :last_name %></label>
                        <%= f.text_field :last_name, :class => 'form-control'%>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :first_name %></label>
                        <%= f.text_field :first_name, :class => 'form-control' %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :birth_date %></label><br>
                        <%= f.date_select :birth_date, :include_blank => true, :start_year => Time.now.year - 70, :class => 'form-control' %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :place_of_birth %></label>
                        <%= f.text_field :place_of_birth, :class => 'form-control' %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :id_number %></label>
                        <%= f.text_field :id_number, :class => 'form-control' %>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h3 class="panel-title">Coordonnées</h3>
                </div>
                <div class="panel-body">
                  <ul class="list-unstyled">
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :adress %></label>
                        <%= f.text_field :adress, :class => 'form-control'%>
                      </div>
                    </li>
                    <!-- <li class="list-group-item">
                    <div class="form-group">
                    <label for="texte"><%= f.label :zip_code %></label>
                    <%= f.number_field :zip_code, :class => 'form-control' %>
                  </div>
                </li> -->
                <li class="list-unstyled">
                  <div class="form-inline">
                    <div class="form-group">
                      <label for="texte"><%= f.label :zip_code %></label>
                      <%= f.number_field :zip_code, :class => 'form-control' %>
                    </div>
                    <div class="form-group">
                      <label for="texte"><%= f.label :city %></label>
                      <%= f.text_field :city, :class => 'form-control' %>
                    </div>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="number" type="tel" name="telephone" id="input_telephone"><%= f.label :phone %></label>
                    <%= f.text_field :phone, :class => 'form-control' %>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="number" type="tel" name="telephone" id="input_telephone"><%= f.label :mobile %></label>
                    <%= f.text_field :mobile, :class => 'form-control' %>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="email" value="E-mail" id="email" name="email" type="email" placeholder="exemple@domaine.com"><%= f.label :email %></label>
                    <%= f.email_field :email, :class => 'form-control' %>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Situation</h3>
            </div>
            <div class="panel-body">
              <ul class="list-group list-unstyled">
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :affiliation_process %></label>
                    <%= f.text_field :affiliation_process, :class => 'form-control'%>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :entry_process %></label><br>
                    <%= f.date_select :entry_process, :class => 'form-control' %>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :expected_process %></label><br>
                    <%= f.date_select :expected_process, :class => 'form-control' %>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :entry_solution %></label>
                    <%= f.text_area :entry_solution, :class => 'form-control' %>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :output_solution %></label>
                    <%= f.text_area :output_solution, :class => 'form-control' %>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Documents</h3>
            </div>
            <div class="panel-body">
              <ul class="list-group list-unstyled">
                <li class="list-group-item">
                  <div class="form-group">
                    <div id="photo_attachment_container">
                      <%= f.label :picture %><br><br>
                      <%= f.file_field :photo %><br>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div class="row-fluid">
    <div class="pull-right">  <%= f.submit 'VALIDER', :class => 'span3 offset2 btn btn-primary submit_class_name_here block-right' %></div>
</div>

</div>
</div>
<% end %>
