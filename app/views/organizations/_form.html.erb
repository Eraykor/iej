<%= form_for(@organization) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row top-buffer">
    <div class="col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
          </div>

  <div class="row top-buffer2">
    <div class="col-lg-4 col-lg-offset-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">COORDONNÉES </h3>
          </div>
        <div class="panel-body">
          <ul class="list-group list-unstyled">
            <li class="list-group-item">
             <div class="form-group">
              <label for="texte"><%= f.label :nom %></label>
              <%= f.text_field :name, :class => 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="form-group">
                <label for="texte"><%= f.label :adresse %></label>
                <%= f.text_field :adress, :class => 'form-control' %>
              </div>
              </li>
              <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :code_postal %></label>
                    <%= f.number_field :zip_code, :class => 'form-control' %>
                    </div>
                  </li>
                <li class="list-group-item">
                  <div class="form-group">
                    <label for="texte"><%= f.label :ville %></label>
                    <%= f.text_field :city, :class => 'form-control' %>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="form-group">
                        <label for="texte"><%= f.label :parent_organization %></label>
                          <%= f.text_field :parent_organization, :class => 'form-control' %>
                            </div>
                         </li>
                      <div class="row">
                        <div class="col-lg-7 col-lg-offset-5">
                          <div class="actions">
                            <div class="pull-right"><%= f.submit 'Organization créer', :class => 'span3 offset2 btn btn-primary submit_class_name_here block-right' %></div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
<% end %>
