<p id="notice"><%= notice %></p>

<h3>Listing Organizations</h3>

<div class="container">
  <div class="row top-buffer">
    <div class="col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
          </div>


<table class="table table-reflow">
  <thead>
    <tr align="center">
      <td>Nom</td>
      <td>Adresse</td>
      <td>code postal</td>
      <td>Ville</td>
      <td>Parent organization</td>
      <td colspan="3"></td>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @organizations.each do |organization| %>
        <td><%= organization.name %></td>
        <td><%= organization.adress %></td>
        <td><%= organization.zip_code %></td>
        <td><%= organization.city %></td>
        <td><%= organization.parent_organization %></td>
        <td class="btn btn-default"><%= link_to 'Show', organization %></td>
        <td class="btn btn-default"><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td class="btn btn-default"><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>


    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Organization', new_organization_path %>

</div>
</div>
</div>
</div>
