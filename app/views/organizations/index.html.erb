<p id="notice"><%= notice %></p>

<h3>Listing Organizations</h3>

<div class="container">
  <div class="row top-buffer">
    <div class="col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
          </div>


<table class="table table-reflow">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Adresse</th>
      <th>code postal</th>
      <th>Ville</th>
      <th>Parent organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @organizations.each do |organization| %>
    <tr align="center">
        <td><%= organization.name %></td>
        <td><%= organization.adress %></td>
        <td><%= organization.zip_code %></td>
        <td><%= organization.city %></td>
        <td><%= organization.parent_organization %></td>
        <td class="btn btn-default btn-xs"><%= link_to 'Show', organization %></td>
        <td class="btn btn-default btn-xs"><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td class="btn btn-default btn-xs"><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>

  </tbody>
  <% end %>
</table>

</div>
</div>
</div>
</div>

<div class="container">
<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <div class="btn btn-primary">
    <%= link_to 'New Organization', new_organization_path %>
  </div>
  </div>
</div>
</div>
