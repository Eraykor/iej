<!DOCTYPE html>
<html>
<head>
  <title>ProjetIej</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <ul class="nav nav-tabs">
    <li role="presentation">
      <% if current_user %>
      <%= link_to "Éditer le profil", edit_employee_path(current_user.id), :class =>'active' %>
    </li>
    <li role="presentation">
      <%= link_to "Logout", :logout, method: :post, :class =>'active' %>
    </li>
  </ul>
  <% else %>
  <%= link_to "Nouvel administrateur employé", new_admin_employee_path %> |
  <%= link_to "Nouvel employé", new_employee_path %> |
  <%= link_to "Login", :login %>
  <% end %>

  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  <%= yield %>

</body>
</html>
