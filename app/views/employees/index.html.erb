
<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="row-fluid">
    <div class="pull-right"><%= link_to 'New Participant', new_participant_path, :class => 'btn btn-primary block-right' %></div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
        </div>
        <div class="panel-body">
          <div class="row text-center">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th  class="text-center"scope="row">Last name</th>
                  <th class="text-center">First name</th>
                  <th class="text-center">Date de naissance</th>
                  <th class="text-center">numero identifiant</th>
                  <th class="text-center">Email</th>
                  <th class="text-center">adresse</th>
                  <th class="text-center" colspan="3"></th>
                </tr>
              </thead>

              <tbody class="table table-hover">
                <% @participants.each do |participant| %>

                <tr>
                  <td  class="text-center" scope="row"><%= participant.last_name %></td>
                  <td class="text-center"><%= participant.first_name %></td>
                  <td class="text-center"><%= participant.birth_date %></td>
                  <td class="text-center"><%= participant.id_number %></td>
                  <td class="text-center"><%= participant.email %></td>
                  <td class="text-center"><%= participant.adress %></td>
                  <td class="text-center"><%= link_to 'Show', participant, :class => 'btn btn-default btn-xs pull-right block-right' %></td>
                  <td class="text-center"><%= link_to 'Edit', edit_participant_path(participant), :class => 'btn btn-default btn-xs pull-right block-right' %></td>
                  <td class="text-center"><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs pull-right block-right' %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
